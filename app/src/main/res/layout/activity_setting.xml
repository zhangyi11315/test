<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/llMain"
    android:background="@color/free_ui_glory_bg"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/webAddress_Lay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/free_ui_dp_60"
        android:background="@drawable/free_ui_selector_white_gray_click"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务器地址"
                android:textColor="@color/free_ui_blue_sky_theme_color"/>

            <TextView
                android:id="@+id/webAddress_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/free_ui_dark_gold_text_black" />

        </LinearLayout>

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/free_ui_blue_sky_more"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/updataAddress_Lay"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/free_ui_dp_1"
        android:layout_height="@dimen/free_ui_dp_60"
        android:background="@drawable/free_ui_selector_white_gray_click"
        android:visibility="gone"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更新路径"
                android:textColor="@color/free_ui_blue_sky_theme_color"/>

            <TextView
                android:id="@+id/updataAddress_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/free_ui_dark_gold_text_black" />

        </LinearLayout>

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/free_ui_blue_sky_more"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/free_ui_dp_60"
        android:layout_marginTop="@dimen/free_ui_dp_1"
        android:background="@color/free_ui_white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版本号"
                android:textColor="@color/free_ui_blue_sky_theme_color"/>

            <TextView
                android:id="@+id/version_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/free_ui_dark_gold_text_black" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>