<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/free_ui_glory_bg"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/free_ui_dp_48"
                    android:layout_marginTop="@dimen/free_ui_dp_8"
                    android:background="@color/free_ui_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/free_ui_dp_12"
                    android:paddingRight="@dimen/free_ui_dp_12">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开始时间："
                        android:textColor="@color/free_ui_blue_sky_theme_color"
                        android:textSize="@dimen/sp_14" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/free_ui_dp_48"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvStartTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/free_ui_blue_sky_shape_kuang_button_corner_normal"
                            android:drawableRight="@drawable/date"
                            android:drawablePadding="@dimen/free_ui_dp_12"
                            android:gravity="center"
                            android:hint="请选择开始时间"
                            android:paddingLeft="@dimen/free_ui_dp_16"
                            android:paddingTop="@dimen/free_ui_dp_4"
                            android:paddingRight="@dimen/free_ui_dp_16"
                            android:paddingBottom="@dimen/free_ui_dp_4"
                            android:textColorHint="@color/free_ui_dark_gold_text_gray" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivHideArrow"
                        android:layout_width="@dimen/free_ui_dp_48"
                        android:layout_height="@dimen/free_ui_dp_48"
                        android:scaleType="center"
                        android:src="@drawable/free_ui_blue_sky_down_arrow" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/free_ui_dp_1"
                    android:background="@color/free_ui_white"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/free_ui_dp_48"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/free_ui_dp_12"
                    android:paddingRight="@dimen/free_ui_dp_12">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="结束时间："
                        android:textColor="@color/free_ui_blue_sky_theme_color"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tvEndTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:background="@drawable/free_ui_blue_sky_shape_kuang_button_corner_normal"
                        android:drawableRight="@drawable/date"
                        android:drawablePadding="@dimen/free_ui_dp_12"
                        android:gravity="center"
                        android:hint="请选择结束时间"
                        android:paddingLeft="@dimen/free_ui_dp_16"
                        android:paddingTop="@dimen/free_ui_dp_4"
                        android:paddingRight="@dimen/free_ui_dp_16"
                        android:paddingBottom="@dimen/free_ui_dp_4"
                        android:textColorHint="@color/free_ui_dark_gold_text_gray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/free_ui_dp_1"
                    android:background="@color/free_ui_white"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/free_ui_dp_48"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/free_ui_dp_12"
                    android:paddingRight="@dimen/free_ui_dp_12">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="仓库　　："
                        android:textColor="@color/free_ui_blue_sky_theme_color"
                        android:textSize="@dimen/sp_14" />

                    <com.pda.platform.ui.ui_pdaplatform.view.FreeUI_ClearEditText
                        android:id="@+id/etUser"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/free_ui_dp_48"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:background="@drawable/free_ui_blue_sky_selector_edittext"
                        android:focusable="true"
                        android:hint="请扫描仓库信息"
                        android:singleLine="true"
                        android:textColor="@color/free_ui_dark_gold_text_black"
                        android:textColorHint="@color/free_ui_dark_gold_text_gray"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/free_ui_dp_1"
                    android:background="@color/free_ui_white"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/free_ui_dp_48"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/free_ui_dp_12"
                    android:paddingRight="@dimen/free_ui_dp_12">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="责任人　："
                        android:textColor="@color/free_ui_blue_sky_theme_color"
                        android:textSize="@dimen/sp_14" />

                    <com.pda.platform.ui.ui_pdaplatform.view.FreeUI_ClearEditText
                        android:id="@+id/etDepot"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/free_ui_dp_48"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:background="@drawable/free_ui_blue_sky_selector_edittext"
                        android:focusable="true"
                        android:hint="请扫描责任人信息"
                        android:singleLine="true"
                        android:textColor="@color/free_ui_dark_gold_text_black"
                        android:textColorHint="@color/free_ui_dark_gold_text_gray"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llMainEqpParent"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/free_ui_dp_48"
                    android:layout_marginTop="@dimen/free_ui_dp_1"
                    android:background="@color/free_ui_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/free_ui_dp_12"
                    android:paddingRight="@dimen/free_ui_dp_12"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="盘点单据："
                        android:textColor="@color/free_ui_blue_sky_theme_color"
                        android:textSize="@dimen/sp_14" />


                    <LinearLayout
                        android:id="@+id/llDanJu"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/free_ui_dp_48"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_weight="1"
                        android:background="@drawable/free_ui_blue_sky_selector_edittext"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvDanJu"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/free_ui_dp_48"
                            android:layout_weight="1"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:hint="请选择盘点单据"
                            android:singleLine="true"
                            android:textColor="@color/free_ui_dark_gold_text_black"
                            android:textColorHint="@color/free_ui_dark_gold_text_gray"
                            android:textSize="@dimen/sp_14" />

                        <ImageView
                            android:id="@+id/ivArrow"
                            android:layout_width="@dimen/free_ui_dp_48"
                            android:layout_height="@dimen/free_ui_dp_48"
                            android:scaleType="center"
                            android:src="@drawable/free_ui_blue_sky_down_arrow" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvSearch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/free_ui_dp_12"
                        android:background="@drawable/free_ui_blue_sky_selector_kuang_button_click_background"
                        android:gravity="center"
                        android:paddingLeft="@dimen/free_ui_dp_16"
                        android:paddingTop="@dimen/free_ui_dp_8"
                        android:paddingRight="@dimen/free_ui_dp_16"
                        android:paddingBottom="@dimen/free_ui_dp_8"
                        android:text="搜索"
                        android:textColor="@color/free_ui_blue_sky_theme_color" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/free_ui_dp_8"
                android:background="@color/free_ui_white"
                android:gravity="center_vertical"
                android:minHeight="@dimen/free_ui_dp_48"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/free_ui_dp_12"
                android:paddingRight="@dimen/free_ui_dp_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="治具号　："
                    android:textColor="@color/free_ui_blue_sky_theme_color"
                    android:textSize="@dimen/sp_14" />

                <com.pda.platform.ui.ui_pdaplatform.view.FreeUI_ClearEditText
                    android:id="@+id/etLot"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/free_ui_dp_48"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:background="@drawable/free_ui_blue_sky_selector_edittext"
                    android:focusable="true"
                    android:hint="请扫描治具号"
                    android:singleLine="true"
                    android:textColor="@color/free_ui_dark_gold_text_black"
                    android:textColorHint="@color/free_ui_dark_gold_text_gray"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/free_ui_dp_1"
                android:background="@color/free_ui_white"
                android:gravity="center_vertical"
                android:minHeight="@dimen/free_ui_dp_48"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/free_ui_dp_12"
                android:paddingRight="@dimen/free_ui_dp_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实际数量："
                    android:textColor="@color/free_ui_blue_sky_theme_color"
                    android:textSize="@dimen/sp_14" />

                <com.pda.platform.ui.ui_pdaplatform.view.FreeUI_ClearEditText
                    android:id="@+id/etNum"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/free_ui_dp_48"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:layout_weight="1"
                    android:background="@drawable/free_ui_blue_sky_selector_edittext"
                    android:focusable="true"
                    android:hint="请填写实际数量"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/free_ui_dark_gold_text_black"
                    android:textColorHint="@color/free_ui_dark_gold_text_gray"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tvConfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/free_ui_dp_12"
                    android:background="@drawable/free_ui_blue_sky_selector_kuang_button_click_background"
                    android:gravity="center"
                    android:paddingLeft="@dimen/free_ui_dp_16"
                    android:paddingTop="@dimen/free_ui_dp_8"
                    android:paddingRight="@dimen/free_ui_dp_16"
                    android:paddingBottom="@dimen/free_ui_dp_8"
                    android:text="确认"
                    android:textColor="@color/free_ui_blue_sky_theme_color" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/free_ui_dp_48"
                android:layout_marginTop="@dimen/free_ui_dp_8"
                android:background="@color/free_ui_white"
                android:paddingLeft="@dimen/free_ui_dp_12"
                android:paddingRight="@dimen/free_ui_dp_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="治具列表"
                    android:textColor="@color/free_ui_blue_sky_theme_color"
                    android:textSize="@dimen/sp_16" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/free_ui_dp_48"
                android:background="@color/free_ui_blue_sky_theme_blue_deep_light"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/free_ui_dp_12"
                android:paddingRight="@dimen/free_ui_dp_12">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="治具"
                    android:textColor="@color/free_ui_dark_gold_text_black"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="数量"
                    android:textColor="@color/free_ui_dark_gold_text_black"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="实际数量"
                    android:textColor="@color/free_ui_dark_gold_text_black"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvThingList"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>